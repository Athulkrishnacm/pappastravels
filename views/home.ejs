    <script>
        $("#rent-form").submit((e) => {
            e.preventDefault()

            const name = $("#name").val().trim();
            const location = $("#location").val().trim();
            const phoneNumber = $("#phone-number").val().trim();
            const pickupDate = $("#book_pick_date").val();
            if (location == '' || phoneNumber == '' || !pickupDate || name == '') {
                alert("Please fill in all fields");
                return
            } else {
                $('#ftco-loader').addClass('show');
                $.ajax({
                    url: "https://script.google.com/macros/s/AKfycbxGe9kknGzQBFm4FN5nfUPUDNK1rh8ih7vZdMt__gFjKI-UEvByRRB9jJGQtYk579jv/exec",
                    data: $("#rent-form").serialize(),
                    method: "post",
                    success: function (response) {
                        $('#ftco-loader').removeClass('show');
                        alert("Details submitted successfully, We will contact you soon!")
                        $("#rent-form")[0].reset();
                    },
                    error: function (err) {
                        alert("Something Error")
                    }
                })
            }
        })
    </script>

